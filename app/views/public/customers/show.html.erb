<div class="col-10 offset-1">
  <div class="pt-2">
    <strong>
      <%= link_to "会員一覧に戻る", public_customers_path %>
    </strong>
  </div>
  <div class="row justify-content-center">
    <h1 class="pb-4"><%= @customer.nick_name %>の詳細</h1>
  </div>

      <% @reviews.each do |review| %>
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center py-2">
            <%#= @game.title %>
            <h5><%= review.title %></h5>
            <div class="d-flex justify-content-end align-items-center">
              <span class="pr-3">コメント数 : <%= review.comments.count %></span>
              <span class="pr-3">いいね数 : <%= review.nices.count %></span>
            </div>
          </div>
        </div>
      <% end %>
      <div class="row justify-content-center py-5">
        <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
      </div>
</div>