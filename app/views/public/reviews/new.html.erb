<div class="col">
  <div class="pt-2">
      <strong>
          <%= link_to "ゲームレビューに戻る", public_game_path(@game.id) %>
      </strong>
  </div>
  <div class="row justify-content-center">
    <h1><strong>投稿フォーム</strong></h1>
  </div>
  <%= form_with model: @review, url: public_game_reviews_path do |f| %>
    <div class="form-group">
      <h4>タイトル</h4>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <h4>レビュー</h4>
      <%= f.text_area :body, class:"form-control", cols:"100" %>
    </div>
    <%= f.submit "投稿", class:"btn btn-primary" %>
  <% end %>
</div>
