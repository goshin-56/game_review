<%= form_with model: @review, url: public_game_reviews_path do |f| %>
  <%= f.hidden_field :game_id, :value => @game.id %>
  <div class="form-group">
    <h4>タイトル</h4>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div>
    <h3>タグ</h3>
  </div>
  <div class="form-group">
    <h4>レビュー</h4>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <%= f.submit "投稿" %>
<% end %>